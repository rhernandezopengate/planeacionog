                    @Html.ValidationMessageFor(model => model.qtycaja, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.qtypallet, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
