                    @Html.ValidationMessageFor(model => model.qtypallet, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.multiplosurtido, htmlAttributes: new { @class = "control-label col-md-2" })
