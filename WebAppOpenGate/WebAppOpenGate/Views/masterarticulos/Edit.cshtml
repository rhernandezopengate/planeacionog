@model WebAppOpenGate.Models.Planeacion.masterarticulos

@{
    ViewBag.Title = "Edit";
    Layout = null;
}

@using (Html.BeginForm())
{
    <div class="modal-header">
        <center>
            <h2 class="modal-title">Editar SKU: @Model.sku</h2>
        </center>
    </div>
